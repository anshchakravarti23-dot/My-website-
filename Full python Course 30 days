/* ==== Stars ==== */
const space=document.getElementById('space');
for(let i=0;i<250;i++){
  const s=document.createElement('div');
  s.className='star';
  const size=Math.random()*2.6+0.6;
  s.style.width=size+'px';s.style.height=size+'px';
  s.style.top=Math.random()*100+'vh';
  s.style.left=Math.random()*100+'vw';
  s.style.animationDuration=(Math.random()*6+4).toFixed(2)+'s';
  s.style.animationDelay=(Math.random()*-1).toFixed(0)+'s';
  space.appendChild(s);
}

/* ==== Days Data 1‚Äì30 ==== */
const days=[
  {day:1,title:"Introduction to Python",definition:"Python ‡§è‡§ï ‡§â‡§ö‡•ç‡§ö-‡§∏‡•ç‡§§‡§∞‡•Ä‡§Ø, ‡§á‡§Ç‡§ü‡§∞‡§™‡•ç‡§∞‡•á‡§ü‡•á‡§° ‡§î‡§∞ general-purpose ‡§≠‡§æ‡§∑‡§æ ‡§π‡•à‡•§ ‡§á‡§∏‡§ï‡•Ä syntax ‡§∏‡§∞‡§≤ ‡§î‡§∞ readable ‡§π‡•à‡•§",uses:"Web, Data, ML, Automation",example:`print("Hello, World!")`},
