/* ==== Render ==== */
const main=document.getElementById('main');
days.forEach(d=>{
  const card=document.createElement('article'); card.className='day';
  const header=document.createElement('div'); header.className='day-header';
  header.innerHTML=`<div class="day-title"><div class="day-num">${d.day}</div><div>${d.title}</div></div><div class="icon">‚ûï</div>`;
  const content=document.createElement('div'); content.className='day-content';
  const body=document.createElement('div'); body.className='day-body';
  body.innerHTML=`<span class="label">Definition:</span><div>${d.definition}</div>
  <span class="label">Uses:</span><div style="white-space:pre-wrap">${d.uses}</div>
  <span class="label">Example:</span>
  <pre><button class="copy-btn">üìã Copy</button>${d.example}</pre>`;  
  content.appendChild(body);

  header.addEventListener('click',()=>{
    const icon=header.querySelector('.icon');
    const isOpen=content.classList.contains('open');
    document.querySelectorAll('.day-content').forEach(c=>c.classList.remove('open'));
    document.querySelectorAll('.icon').forEach(i=>i.textContent='‚ûï');
    if(!isOpen){
      content.classList.add('open');
      icon.textContent='‚ûñ';
      setTimeout(()=>header.scrollIntoView({behavior:'smooth',block:'center'}),180);
    }
  });

  card.appendChild(header); card.appendChild(content);
  main.appendChild(card);
});

/* ==== Copy Buttons ==== */
main.addEventListener('click',e=>{
  if(e.target.classList.contains('copy-btn')){
    const code=e.target.parentElement.textContent.replace('üìã Copy','').trim();
    navigator.clipboard.writeText(code);
    e.target.textContent='‚úÖ Copied';
    setTimeout(()=>e.target.textContent='üìã Copy',1500);
  }
});
</script>
